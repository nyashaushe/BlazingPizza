@page "/orders"
@page "/orders/{orderId:int}"
@layout Components.Layout.PizzaLayout
@inject HttpClient HttpClient
@inject NavigationManager NavigationManager

<PageTitle>My Orders - Blazing Pizza</PageTitle>

<div class="container mt-4">
    <h1 class="display-4 text-center mb-4">My Orders</h1>
    
    @if (OrderId.HasValue)
    {
        <div class="alert alert-info">
            <h4>Order Details #@OrderId</h4>
            <p>Viewing specific order information for Order ID: @OrderId</p>
            <a href="/orders" class="btn btn-secondary">‚Üê Back to All Orders</a>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h3 class="card-title mb-0">Recent Orders</h3>
                    </div>
                    <div class="card-body">
                        @if (orders?.Any() == true)
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var order in orders)
                                {
                                    <div class="list-group-item d-flex justify-content-between align-items-center">
                                        <div>
                                            <h5 class="mb-1">Order #@order.OrderId</h5>
                                            <p class="mb-1">@order.CreatedTime.ToString("MMM dd, yyyy - hh:mm tt")</p>
                                            <small class="text-muted">@order.Pizzas.Count pizza(s)</small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-success fs-6">@order.GetFormattedTotalPrice()</span>
                                            <br />
                                            <a href="/orders/@order.OrderId" class="btn btn-sm btn-outline-primary mt-1">View Details</a>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <img src="/img/pizza-slice.svg" alt="No orders" style="width: 64px; opacity: 0.5;" />
                                <h4 class="mt-3">No orders yet!</h4>
                                <p class="text-muted">Start by ordering your first delicious pizza.</p>
                                <a href="/" class="btn btn-primary">Order Now</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    [Parameter] public int? OrderId { get; set; }
    
    private List<Order>? orders;
    
    protected override async Task OnInitializedAsync()
    {
        // For demo purposes, create some sample orders
        orders = new List<Order>
        {
            new Order 
            { 
                OrderId = 1001, 
                CreatedTime = DateTime.Now.AddDays(-1),
                Pizzas = new List<Pizza>
                {
                    new Pizza { Special = new PizzaSpecial { Name = "Margherita", BasePrice = 12.99m }, Size = 12 }
                }
            },
            new Order 
            { 
                OrderId = 1002, 
                CreatedTime = DateTime.Now.AddDays(-3),
                Pizzas = new List<Pizza>
                {
                    new Pizza { Special = new PizzaSpecial { Name = "Pepperoni", BasePrice = 14.99m }, Size = 14 },
                    new Pizza { Special = new PizzaSpecial { Name = "Supreme", BasePrice = 18.99m }, Size = 12 }
                }
            }
        };
    }
}
